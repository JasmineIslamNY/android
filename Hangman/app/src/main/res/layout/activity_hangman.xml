<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context="com.tek_genie.hangman.Hangman">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context="com.tek_genie.hangman.Hangman"
        tools:showIn="@layout/activity_hangman"
        android:layout_gravity="left|center_vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/labelNumberOfFailedTries"
        android:hint="0 tries"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Won / Total"
        android:id="@+id/labelWonGames"
        android:layout_below="@+id/labelNumberOfFailedTries"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="0 / 0"
        android:id="@+id/countWonTotal"
        android:layout_below="@+id/labelWonGames"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/labelWonGames"
        android:layout_alignStart="@+id/labelWonGames"
        android:textAlignment="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Games"
        android:id="@+id/labelGames"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/labelWonGames"
        android:layout_alignEnd="@+id/labelWonGames"
        android:singleLine="true"
        android:layout_alignLeft="@+id/labelWonGames"
        android:layout_alignStart="@+id/labelWonGames"
        android:textAlignment="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Time"
        android:id="@+id/labelTime"
        android:layout_below="@+id/countWonTotal"
        android:layout_alignRight="@+id/countWonTotal"
        android:layout_alignEnd="@+id/countWonTotal"
        android:layout_marginTop="29dp"
        android:textAlignment="center"
        android:layout_alignLeft="@+id/countWonTotal"
        android:layout_alignStart="@+id/countWonTotal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="0:00"
        android:id="@+id/countTime"
        android:layout_below="@+id/labelTime"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textAlignment="center"
        android:layout_alignLeft="@+id/labelTime"
        android:layout_alignStart="@+id/labelTime" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/game_complete"
        android:id="@+id/buttonGameComplete"
        android:layout_below="@+id/countTime"
        android:layout_alignRight="@+id/countTime"
        android:layout_alignEnd="@+id/countTime"
        android:layout_marginTop="29dp"
        android:layout_alignLeft="@+id/countTime"
        android:layout_alignStart="@+id/countTime" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/labelLettersTried"
        android:layout_below="@+id/labelWonGames"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="No Letters Tried Yet" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edittextEnterNextLetter"
        android:hint="Enter Next Letter"
        android:layout_alignTop="@+id/labelTime"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/submit"
        android:id="@+id/buttonSubmitLetter"
        android:layout_below="@+id/countTime"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="_ _"
            android:id="@+id/labelGameName"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/buttonGameComplete"
            android:layout_alignRight="@+id/buttonGameComplete"
            android:layout_alignEnd="@+id/buttonGameComplete"
            android:layout_marginTop="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="No Clue for This Person"
            android:id="@+id/labelClue"
            android:layout_below="@+id/labelGameName"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="false"
            android:layout_toEndOf="@+id/labelGameName" />

    </RelativeLayout>
</FrameLayout>
