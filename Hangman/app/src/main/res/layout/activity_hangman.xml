<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context="com.tek_genie.hangman.Hangman">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context="com.tek_genie.hangman.Hangman"
        tools:showIn="@layout/activity_hangman"
        android:layout_gravity="left|center_vertical">

    <!--
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/labelNumberOfFailedTries"
        android:hint="0 tries"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
        -->

        <ImageView
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:id="@+id/imageTryNumber"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Won / Total"
        android:id="@+id/labelWonGames"
        android:layout_below="@+id/labelGames"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="0 / 0"
        android:id="@+id/countWonTotal"
        android:layout_below="@+id/labelWonGames"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/labelWonGames"
        android:layout_alignStart="@+id/labelWonGames"
        android:textAlignment="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Games"
        android:id="@+id/labelGames"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/labelWonGames"
        android:layout_alignEnd="@+id/labelWonGames"
        android:singleLine="true"
        android:layout_alignLeft="@+id/labelWonGames"
        android:layout_alignStart="@+id/labelWonGames"
        android:textAlignment="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Time"
        android:id="@+id/labelTime"
        android:layout_below="@+id/countWonTotal"
        android:layout_alignRight="@+id/countWonTotal"
        android:layout_alignEnd="@+id/countWonTotal"
        android:layout_marginTop="29dp"
        android:textAlignment="center"
        android:layout_alignLeft="@+id/countWonTotal"
        android:layout_alignStart="@+id/countWonTotal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="0:00"
        android:id="@+id/countTime"
        android:layout_below="@+id/labelTime"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textAlignment="center"
        android:layout_alignLeft="@+id/labelTime"
        android:layout_alignStart="@+id/labelTime" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/game_complete"
        android:id="@+id/buttonGameComplete"
        android:layout_below="@+id/countTime"
        android:layout_alignRight="@+id/countTime"
        android:layout_alignEnd="@+id/countTime"
        android:layout_marginTop="29dp"
        android:layout_alignLeft="@+id/countTime"
        android:layout_alignStart="@+id/countTime" />

        <!--
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/labelLettersTried"
        android:layout_below="@+id/labelWonGames"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="No Letters Tried Yet" />
        -->

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edittextEnterNextLetter"
        android:hint="Enter Next Letter"
        android:layout_below="@+id/imageTryNumber"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/submit"
        android:id="@+id/buttonSubmitLetter"
        android:layout_below="@+id/edittextEnterNextLetter"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="_ _"
            android:id="@+id/labelGameName"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/buttonGameComplete"
            android:layout_alignRight="@+id/buttonGameComplete"
            android:layout_alignEnd="@+id/buttonGameComplete"
            android:layout_marginTop="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="No Clue for This Person"
            android:id="@+id/labelClue"
            android:layout_below="@+id/labelGameName"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="false"
            android:layout_toEndOf="@+id/labelGameName" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A"
            android:id="@+id/buttonA"
            android:layout_above="@+id/buttonH"
            android:layout_alignParentLeft="true" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="B"
            android:id="@+id/buttonB"
            android:layout_above="@+id/buttonI"
            android:layout_toRightOf="@+id/buttonA" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="C"
            android:id="@+id/buttonC"
            android:layout_above="@+id/buttonJ"
            android:layout_toRightOf="@+id/buttonB" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="D"
            android:id="@+id/buttonD"
            android:layout_above="@+id/buttonK"
            android:layout_toRightOf="@+id/buttonC"/>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="E"
            android:id="@+id/buttonE"
            android:layout_above="@+id/buttonL"
            android:layout_toRightOf="@+id/buttonD" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="F"
            android:id="@+id/buttonF"
            android:layout_above="@+id/buttonM"
            android:layout_toRightOf="@+id/buttonE" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="G"
            android:id="@+id/buttonG"
            android:layout_above="@+id/buttonN"
            android:layout_toRightOf="@+id/buttonF" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="H"
            android:id="@+id/buttonH"
            android:layout_above="@+id/buttonO"
            android:layout_alignParentLeft="true"/>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="I"
            android:id="@+id/buttonI"
            android:layout_above="@+id/buttonP"
            android:layout_toRightOf="@+id/buttonH" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="J"
            android:id="@+id/buttonJ"
            android:layout_above="@+id/buttonQ"
            android:layout_toRightOf="@+id/buttonI" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="K"
            android:id="@+id/buttonK"
            android:layout_above="@+id/buttonR"
            android:layout_toRightOf="@+id/buttonJ" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="L"
            android:id="@+id/buttonL"
            android:layout_above="@+id/buttonS"
            android:layout_toRightOf="@+id/buttonK" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="M"
            android:id="@+id/buttonM"
            android:layout_above="@+id/buttonT"
            android:layout_toRightOf="@+id/buttonL"/>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="N"
            android:id="@+id/buttonN"
            android:layout_above="@+id/buttonU"
            android:layout_toRightOf="@+id/buttonM" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="O"
            android:id="@+id/buttonO"
            android:layout_above="@+id/buttonV"
            android:layout_alignParentLeft="true" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="P"
            android:id="@+id/buttonP"
            android:layout_above="@+id/buttonW"
            android:layout_toRightOf="@+id/buttonO"/>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Q"
            android:id="@+id/buttonQ"
            android:layout_above="@+id/buttonX"
            android:layout_toRightOf="@+id/buttonP" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="R"
            android:id="@+id/buttonR"
            android:layout_above="@+id/buttonY"
            android:layout_toRightOf="@+id/buttonQ" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="S"
            android:id="@+id/buttonS"
            android:layout_above="@+id/buttonZ"
            android:layout_toRightOf="@+id/buttonR" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="T"
            android:id="@+id/buttonT"
            android:layout_above="@+id/buttonDASH"
            android:layout_toRightOf="@+id/buttonS" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="U"
            android:id="@+id/buttonU"
            android:layout_above="@+id/buttonQUOTE"
            android:layout_toRightOf="@+id/buttonT" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="V"
            android:id="@+id/buttonV"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="W"
            android:id="@+id/buttonW"
            android:layout_toRightOf="@+id/buttonV"
            android:layout_alignParentBottom="true"/>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="X"
            android:id="@+id/buttonX"
            android:layout_toRightOf="@+id/buttonW"
            android:layout_alignParentBottom="true"/>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Y"
            android:id="@+id/buttonY"
            android:layout_toRightOf="@+id/buttonX"
            android:layout_alignParentBottom="true" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Z"
            android:id="@+id/buttonZ"
            android:layout_toRightOf="@+id/buttonY"
            android:layout_alignParentBottom="true" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:id="@+id/buttonDASH"
            android:layout_toRightOf="@+id/buttonZ"
            android:layout_alignParentBottom="true" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="'"
            android:id="@+id/buttonQUOTE"
            android:layout_toRightOf="@+id/buttonDASH"
            android:layout_alignParentBottom="true" />


    </RelativeLayout>
</FrameLayout>
